@model CharacterCreator.Models.Character

<link rel="stylesheet" type="text/css" href="~/css/styles.css" />
<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" />
<script src="http://code.jquery.com/jquery.min.js" type="text/javascript"></script>
<script src="~/js/scripts.js" type="text/javascript"></script>


<div class="row">
    <div class="col-md-6">
        <div id="visual">
            <span id="skin"><img src="~/images/skin/@(Model.skinId).png" /></span>
            <span id="hair"><img src="~/images/hair/@(Model.hairId).png"></span>
            <span id="outfits"><img src="~/images/outfits/@(Model.outfitId).png"> </span>
        </div>
    </div>

    <div class="col-md-6">


        <h2>Unit Details</h2>
        <hr />

        <p>@Html.DisplayNameFor(model => model.name): @Html.DisplayFor(model => model.name)</p>

        <p>@Html.DisplayFor(model => model.Hair.name)</p>
        <p>@Html.DisplayFor(model => model.Personality.name)</p>
        <p>@Html.DisplayFor(model => model.Outfit.name)</p>
        <p>@Html.DisplayFor(model => model.Skin.name)</p>
    </div>
