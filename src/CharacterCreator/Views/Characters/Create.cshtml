@model CharacterCreator.Models.Character

<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" />
    <script src="http://code.jquery.com/jquery.min.js" type="text/javascript"></script>
    <script src="~/js/scripts.js" type="text/javascript"></script>
    <title>Character- Create</title>
</head>
<body>
    <h2>Create</h2>
    <hr />
    <h4>Add a new character</h4>
    @using (Html.BeginForm())
    {

       <div class="row">
        <div class="col-md-6">
            <div id="visual">
              <span id = "outfits"> </span>
            </div>
         </div>
         <div class="col-md-6">
            <div id="create">
                <p>
                    Character Name
                    @Html.TextBoxFor(model => model.name)
                </p>

                <p>
                    Hair
                    @Html.DropDownList("hairId")
                </p>


                <p>
                    Skin Tone
                    @Html.DropDownList("skinId")
                </p>

                <p>
                    Personality
                    @Html.DropDownList("personalityId")
                </p>

                <p>
                    Outfit
                    @Html.DropDownList("outfitId")
                </p>

                <input type="submit" value="Create" />
            </div>
           </div>
        </div>
    }
    <p>@Html.ActionLink("Back to list", "Index")</p>
</body>
</html>